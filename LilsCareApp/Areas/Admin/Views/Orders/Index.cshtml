@model IEnumerable<AdminOrderDTO>
@{
    ViewData["Title"] = "ADMIN ORDER";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}

<partial name="_MenuAdminPartial" />
<div class="content">
    <div class="border rounded p-3">
        <h5 class="my-4">Поръчки</h5>
        <p>Преглед на всички поръчки и избор на поръчка за редактиране</p>
        <hr />
            <div class="row m-3">
                <div class="col-2">
                    <p class="mb-0"><strong>Поръчка</strong></p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="0"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="1"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
                <div class="col-2">
                    <p class="mb-0"><strong>Дата</strong></p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="2"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="3"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
                <div class="col-2">
                    <p class="mb-0"><strong>Клиент</strong></p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="4"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="5"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
                <div class="col-2">
                    <p class="mb-0"><strong>Плащане</strong></p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="6"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="7"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
                <div class="col-2">
                    <p class="mb-0"><strong>Статус</strong></p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="8"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="9"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
                <div class="col-1">
                    <p class="mb-0"><strong>Общо</strong></p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="10"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="OrderBy" asp-route-orderBy="11"
                       class="text-decoration-none text-black">
                        <i class="fa fa-angle-up"></i>
                    </a>
                </div>
            </div>
            @foreach (var order in Model)
            {
            <div class="row m-3">
                <hr />
                <div class="col-2">@order.OrderNumber</div>
                <div class="col-2">@order.Date.ToString("dd/MM/yyyy")</div>
                <div class="col-2">@order.Customer</div>
                <div class="col-2">@order.Payment</div>
                <div class="col-2">@order.StatusOrder</div>
                <div class="col-1">@order.Total</div>
                <div class="col-1">
                        <a asp-area="Admin" 
                            asp-controller="OrderDetails" 
                            asp-action="Index" 
                            asp-route-id="@order.Id"
                            class="nav-link text-warning">
                           <i class="fa fa-edit"></i>
                        </a>
                </div>
            </div>
            }
    </div>
</div>