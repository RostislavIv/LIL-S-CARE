@inject IViewLocalizer Localizer
@model AddressOrderDTO

<!-- New Delivery Address Start -->
<form asp-action="AddAddressDelivery" method="post">
    <input asp-for="@Model.Id" value="@Model.Id" hidden />
    <input asp-for="@Model.DeliveryMethodId" value="@Model.DeliveryMethodId" hidden />
    <div class="row my-2">
        <div class="col-6">
            <label asp-for="@Model.FirstName" class="form-label small">@Localizer["First Name"]*</label>
            <input asp-for="@Model.FirstName"
                   type="text"
                   class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="@Model.LastName" class="form-label small">@Localizer["Last Name"]*</label>
            <input asp-for="@Model.LastName"
                   type="text"
                   class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-4">
            <label asp-for="@Model.Country" class="form-label small">@Localizer["Country"]*</label>
            <select asp-for="@Model.Country" class="form-select">
                <option>България</option>
            </select>
            <span asp-validation-for="@Model.Country" class="text-danger"></span>
        </div>
        <div class="col-3">
            <label asp-for="@Model.PostCode" class="form-label small">@Localizer["ZIP Code"]*</label>
            <input asp-for="@Model.PostCode"
                   type="text"
                   class="form-control" />
            <span asp-validation-for="@Model.PostCode" class="text-danger"></span>
        </div>
        <div class="col-5">
            <label asp-for="@Model.Town" class="form-label small">@Localizer["City"]*</label>
            <input asp-for="@Model.Town"
                   type="text"
                   class="form-control" />
            <span asp-validation-for="@Model.Town" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2>">
        <div class="col-8">
            <label asp-for="@Model.Address" class="form-label small">@Localizer["Address"]*</label>
            <input asp-for="@Model.Address"
                   type="text"
                   class="form-control" />
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="@Model.District" class="form-label small">@Localizer["District"]</label>
            <input asp-for="@Model.District"
                   type="text"
                   class="form-control" />
            <span asp-validation-for="@Model.District" class="text-danger"></span>
        </div>
    </div>
    <div class="my-2">
        <label asp-for="@Model.PhoneNumber" class="form-label small">@Localizer["Phone number* - we only use it if there is a problem with the delivery."]</label>
        <input asp-for="@Model.PhoneNumber"
               class="form-control" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="my-2">
        <label asp-for="@Model.Email" class="form-label small">@Localizer["Order confirmation email"]</label>
        <input asp-for="@Model.Email"
               class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-end">
        <!-- Save Changes Start -->
        <button type="submit" class="btn btn-sm ms-3">@Localizer["Save"]</button>
        <!-- Save Changes End -->
    </div>
</form>
<!-- New Delivery Address End -->