@inject IViewLocalizer Localizer
@model SubscriberDTO
@{
    ViewData["Title"] = Localizer["INGREDIENTS"];
}
@section Styles {
    <link rel="stylesheet" href="~/css/ingredients.css" />
    <link rel="stylesheet" href="~/lib/owlcarousel/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/carousel-products.css" />
}

<!-- Carousel Start-->
<section>
    <div id="carousel-ingredients"
         class="carousel slide carousel-fade"
         data-bs-ride="carousel">
        <!-- Indicators Dots Start -->
        <div class="carousel-indicators">
            <button type="button"
                    data-bs-target="#carousel-ingredients"
                    data-bs-slide-to="0"
                    class="active"></button>
            <button type="button"
                    data-bs-target="#carousel-ingredients"
                    data-bs-slide-to="1"></button>
            <button type="button"
                    data-bs-target="#carousel-ingredients"
                    data-bs-slide-to="2"></button>
            <button type="button"
                    data-bs-target="#carousel-ingredients"
                    data-bs-slide-to="3"></button>
        </div>
        <!-- Indicators Dots End -->
        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            <!-- Carousel Item 1 Start -->
            <div class="carousel-item active">
                <img src="/files/ingredients/carousel/image-01.webp"
                     alt=""
                     width="1411"
                     height="228"
                     style="
                  width: 1573px;
                  height: 228px;
                  object-fit: cover;
                  object-position: 50% 50%;
                "
                     fetchpriority="high" />

                <div class="carousel-caption">
                    <h2 class="h2">@Localizer["ABOUT THE INGREDIENTS"]</h2>
                    <p class="fs-5">@Localizer["ORIGIN AND ACTION ON THE SKIN AND THE PRODUCT"]</p>
                </div>
            </div>
            <!-- Carousel Item 1 End -->
            <!-- Carousel Item 2 Start -->
            <div class="carousel-item">
                <img src="/files/ingredients/carousel/image-02.webp"
                     alt="1687301198446-L.png"
                     width="1411"
                     height="228"
                     style="
                  width: 1573px;
                  height: 228px;
                  object-fit: cover;
                  object-position: 50% 50%;
                "
                     fetchpriority="high" />
                <div class="carousel-caption">
                    <h2 class="h2">@Localizer["ORIGIN"]</h2>
                    <p class="fs-5">
                        @Localizer["FROM BULGARIA OR BIO. AND SOME INGREDIENTS ARE BOTH!"]
                    </p>
                </div>
            </div>
            <!-- Carousel Item 2 End -->
            <!-- Carousel Item 3 Start -->
            <div class="carousel-item">
                <img src="/files/ingredients/carousel/image-03.webp"
                     alt="IMG_20230907_190239.png"
                     width="1411"
                     height="228"
                     style="
                  width: 1573px;
                  height: 228px;
                  object-fit: cover;
                  object-position: 50% 50%;
                "
                     fetchpriority="high" />
                <div class="carousel-caption">
                    <h2 class="h2">@Localizer["GENTLE AND NATURAL"]</h2>
                    <p class="fs-5">
                        @Localizer["ALCOHOL-FREE. NOURISH, HYDRATE AND PROTECT"]
                    </p>
                </div>
            </div>
            <!-- Carousel Item 3 End -->
            <!-- Carousel Item 4 Start -->
            <div class="carousel-item">
                <img src="/files/ingredients/carousel/image-04.webp"
                     alt="IMG_20230907_190239.png"
                     width="1411"
                     height="228"
                     style="
                  width: 1573px;
                  height: 228px;
                  object-fit: cover;
                  object-position: 50% 50%;
                "
                     fetchpriority="high" />
                <div class="carousel-caption">
                    <h2 class="h2">@Localizer["IT'S EASY!"]</h2>
                    <p class="fs-5">
                        @Localizer["SKIN CARE SHOULD BE AN EASY AND PLEASANT ROUTINE"]
                    </p>
                </div>
            </div>
            <!-- Carousel Item 4 End -->
        </div>

        <!-- Left and Right Controls Icons Start -->
        <button class="carousel-control-prev"
                type="button"
                data-bs-target="#carousel-ingredients"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next"
                type="button"
                data-bs-target="#carousel-ingredients"
                data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
        <!-- Left and Right Controls Icons End -->
    </div>
</section>
<!-- Carousel End-->
<!-- Section 01 Start -->
<section>
    <div class="d-flex justify-content-center p-0">
        <div style="width: 34%">
            <img src="/files/ingredients/section/image-section-01.webp"
                 alt=""
                 style="width: 100%; object-fit: cover" />
        </div>
        <div class="ps-5 pt-2" style="width: 66%">
            <h2 class="h2">@Localizer["OILS"]</h2>
            <p class="fs-5">
                @Localizer["We use natural oils from Bulgaria such as rosehip, apricot, almond and grape seed oils. As they can also be organic. And exotic oils such as coconut, cocoa and jojoba are naturally always of organic origin. In skin care, oils create a protective barrier that keeps water hydrated in the skin. In the summer, light and \"dry\" oils are suitable, which absorb quickly and are non-comedogenic, and in the dry and cold months, thicker and harder oils such as coconut and cocoa."]
            </p>
        </div>
    </div>
</section>
<!-- Section 01 End -->
<div style="background: rgb(var(--app-bg-secondary)); height: 20px"></div>
<!-- Section 02 Start -->
<section>
    <div class="d-flex justify-content-center p-0">
        <div class="pe-5 pt-2" style="width: 66%; text-align: right">
            <h2 class="text-right">@Localizer["ANTIOXIDANTS"]</h2>
            <p class="fs-5">
                @Localizer["They have many beneficial effects. In short, they slow down aging by protecting against oxidation and free radicals. Soothes skin and irritations and soothes cell damage. They stimulate healing and the production of collagen and elastin. All our products contain <strong>vitamin E</strong> - an essential antioxidant. And our creams and lotions also contain <strong>niacinamide (vitamin B3)</strong>, which also helps against pigmentation. Often botanical <strong>extracts</strong> such as <strong>green tea</strong> are also rich in antioxidants."]
            </p>
            <a asp-controller="Details" asp-action="Index" asp-route-id="5" class="btn" style="float: right">@Localizer["MICELLAR WATER GREEN TEA"]</a>
        </div>
        <div style="width: 34%">
            <img src="/files/ingredients/section/image-section-02.webp"
                 alt=""
                 style="width: 100%; object-fit: cover" />
        </div>
    </div>
</section>
<!-- Section 02 End -->
<div style="background: rgb(var(--app-bg-secondary)); height: 20px"></div>
<!-- Section 03 Start -->
<section>
    <div class="d-flex justify-content-center p-0">
        <div style="width: 34%">
            <img src="/files/ingredients/section/image-section-03.webp"
                 alt=""
                 style="width: 100%; object-fit: cover" />
        </div>
        <div class="ps-5 pt-2" style="width: 66%">
            <h2 class="h2">@Localizer["HUMECTANTS"]</h2>
            <p class="fs-5">
                @Localizer["They attract water and help with <strong>hydration</strong>. We use glycerin and hyaluronic acid of plant origin <strong>Glycerin</strong> has a small molecule that acts in depth, and <strong>hyaluronic acid</strong> acts on the surface of the skin. Together they help for good and complete hydration. Humectans are often water-soluble and are found in products such as creams and lotions."]
            </p>
            <a asp-controller="Details" asp-action="Index" asp-route-id="3" class="btn" style="float: left">@Localizer["MOISTURIZING ROSE CREAM"]</a>
        </div>
    </div>
</section>
<!-- Section 03 End -->
<div style="background: rgb(var(--app-bg-secondary)); height: 20px"></div>
<!-- Section 04 Start -->
<section>
    <div class="d-flex justify-content-center p-0">
        <div class="pe-5 pt-2" style="width: 66%; text-align: right">
            <h2 class="h2">@Localizer["NATURAL PRESERVATIVE"]</h2>
            <p class="fs-5">
                @Localizer["Potassium Sorbate, Sodium Benzoate, Benzyl Alcohol. Звучат страшно нали? Тези три състваки са едини от натуралните консерванти, позволени в натурални и био продуктите. Общо са по-малко от 1%. Важни са, защото предпазват от разваляне и развитието на бактерии, гъбички, дрожди и мухъли в продуктите. Използват се главно в продукти с вода като кремове, лосиони, емулсии и серуми."]
            </p>
        </div>
        <div style="width: 34%">
            <img src="/files/ingredients/section/image-section-04.webp"
                 alt=""
                 style="width: 100%; object-fit: cover" />
        </div>
    </div>
</section>
<!-- Section 04 End -->
<div style="background: rgb(var(--app-bg-secondary)); height: 20px"></div>
<!-- Section 05 Start -->
<section>
    <div class="d-flex justify-content-center p-0">
        <div style="width: 34%">
            <img src="/files/ingredients/section/image-section-05.webp"
                 alt=""
                 style="width: 100%; object-fit: cover" />
        </div>
        <div class="ps-5 pt-2" style="width: 66%">
            <h2 class="h2">@Localizer["BOTANICAL EXTRACTS"]</h2>
            <p class="fs-5">
                @Localizer["They are often glycerine extracts and have different effects depending on the plants and herbs from which they are extracted. For example, calendula soothes and is suitable for sensitive skin. Rosehip extract helps keep the skin young and supple. And green tea extract is rich in antioxidants. Whatever extract the products contain, they are always a great natural remedy."]
            </p>
        </div>
    </div>
</section>
<!-- Section 05 End -->
<div style="background: rgb(var(--app-bg-secondary)); height: 20px"></div>
<!-- Add To Subscribers Start -->
<form asp-controller="Ingredients" asp-action="AddToSubscribers" method="post">
    <partial name="_SubscribersPartial" />
</form>
<!-- Add To Subscribers End -->
<!-- Similar Products Start -->
<vc:carousel-products-component user-id="@ViewBag.UserId"></vc:carousel-products-component>
<!-- Similar Products End -->


@section Scripts {
    <script src="~/js/ingredients.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/carousel-products.js"></script>

    <!-- Validation form fields on client -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Custom validation for the form -->
    <script src="~/js/customValidations.js"></script>

}