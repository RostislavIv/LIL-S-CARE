@model CheckoutDTO
@{
    ViewData["Title"] = "ПОРЪЧКА";
}
@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" />
}

<div class="container p-3">
    <div class="row g-5 p-3">
        <!-- Client's data and Delivery address Start -->
        <div class="col-lg-6">
            <div class="container p-3 my-4 rounded"
                 style="background-color: rgb(var(--app-bg-secondary))">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="d-flex justify-content-between">
                        <div class="small">
                            Влезли сте като @User.Identity.Name
                        </div>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Checkout", new { area = "" })">
                            <input class="nav-link small text-decoration-underline" type="submit" style="color: rgb(var(--app-btn-bg))" value="Изход">
                        </form>
                    </div>
                }
                else
                {
                    <small>
                        Вече имате акаунт?
                        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Checkout", new { area = "" })" style="color: rgb(var(--app-btn-bg))">
                            Влезте
                        </a>
                        в него за по-бърза поръчка.
                    </small>
                }
            </div>
            <div  class="w-100">
                <!-- Delivery Method Start -->
                
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="py-4 m-0">Метод за доставка</h5>
                    @if (Model.ShippingProvider != null)
                    {
                        <form asp-controller="Checkout" asp-action="EditShippingProvider" method="post">
                            <input class="nav-link small text-decoration-underline" type="submit" style="color: rgb(var(--app-btn-bg))" value="Редактиране">
                        </form>
                    }

                </div>
                @if (Model.ShippingProvider is null)
                {
                    <form asp-controller="Checkout" asp-action="SelectShippingProvider" method="post">
                        <select asp-for="@Model.ShippingProviderId" class="form-control" aria-required="true">
                            @foreach (var shippingProvider in Model.ShippingProviders)
                            {
                                <option value="@shippingProvider.Id">@shippingProvider.Name - @shippingProvider.Price.ToString("F2") лв.</option>
                            }
                        </select>
                        <input type="submit"
                               class="btn mt-3"
                               style="width: 100%"
                               value="Продължете">
                    </form>
                }
                else
                {
                    <div class="row" style="opacity: 0.9">
                        <div class="d-flex justify-content-between">
                            <span>@Model.ShippingProvider.Name</span>
                            <span>@Model.ShippingProvider.Price.ToString("F2") лв. </span>
                        </div>
                        <span class="small">2-3 работни дни</span>
                    </div>
                }


                <!-- Delivery Method End -->
                <hr />
                <!-- Customer and Delivery Details Start -->
                @if(Model.AddressDelivery is null)
                {
                    <div>
                        <div class="my-2">
                            <label for="email" class="form-label small">Имейл за потвърждение на поръчката*</label>
                            <input for="email"
                                   type="email"
                                   class="form-control"
                                   name="email" />
                        </div>
                        <div class="my-2">
                            <label for="firstName" class="form-label small">Собствено име*</label>
                            <input for="firstName"
                                   type="text"
                                   class="form-control"
                                   name="firstName" />
                        </div>
                        <div class="my-2">
                            <label for="lastName" class="form-label small">Фамилия*</label>
                            <input for="lastName"
                                   type="text"
                                   class="form-control"
                                   name="lastName" />
                        </div>
                        <div class="my-2">
                            <label for="phoneNumber" class="form-label small">Телефон*</label>
                            <input for="phoneNumber"
                                   type="tel"
                                   class="form-control"
                                   name="phoneNumber" />
                        </div>
                        <h5 class="my-4">Подробности за доставка</h5>
                        <div class="my-2">
                            <label for="country" class="form-label small">Държава*</label>
                            <select class="form-select">
                                <option>България</option>
                            </select>
                        </div>
                        <div class="my-2">
                            <label for="address" class="form-label small">Адрес*</label>
                            <input for="address"
                                   type="text"
                                   class="form-control"
                                   name="address" />
                        </div>
                        <div class="my-2">
                            <label for="town" class="form-label small">Град*</label>
                            <input for="town"
                                   type="text"
                                   class="form-control"
                                   name="town" />
                        </div>
                        <div class="my-2">
                            <label for="district" class="form-label small">Окръг*</label>
                            <select class="form-select">
                                <option>Благоевград</option>
                                <option>Бургас</option>
                                <option>Варна</option>
                                <option>Велико</option>
                                <option>Видин</option>
                                <option>Враца</option>
                                <option>Габрово</option>
                                <option>Добрич</option>
                                <option>Кърджали</option>
                                <option>Кюстендил</option>
                                <option>Ловеч</option>
                                <option>Монтана</option>
                                <option>Пазарджик</option>
                                <option>Перник</option>
                                <option>Плевен</option>
                                <option>Пловдив</option>
                                <option>Разград</option>
                                <option>Русе</option>
                                <option>Силистра</option>
                                <option>Сливен</option>
                                <option>Смолян</option>
                                <option>София</option>
                                <option>Софийска област</option>
                                <option>Стара</option>
                                <option>Търговище</option>
                                <option>Хасково</option>
                                <option>Шумен</option>
                                <option>Ямбол</option>
                            </select>
                        </div>
                        <div class="my-2">
                            <label for="code" class="form-label small">Пощенски код*</label>
                            <input for="code"
                                   type="number"
                                   class="form-control"
                                   name="code" />
                        </div>
                        <button type="submit"
                                class="btn btn-primary mt-3"
                                style="width: 100%">
                            Продължете
                        </button>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="py-4 m-0">Подробности за клиента и доставката</h5>
                        <a style="color: rgb(var(--app-btn-bg))">
                            Редактиране
                        </a>
                    </div>
                    <div style="display: block">
                        <div class="row" style="opacity: 0.9">
                            <span>@Model.AddressDelivery.FirstName @Model.AddressDelivery.LastName</span>
                            <span>@Model.AddressDelivery.Address, </span>
                            <span>@Model.AddressDelivery.PostCode @Model.AddressDelivery.Town, @Model.AddressDelivery.District, @Model.AddressDelivery.Country</span>
                            <span>@Model.AddressDelivery.PhoneNumber</span>
                        </div>
                    </div>
                }



                <!-- Customer and Delivery Details End -->
                <hr />

                <!-- Confirm Order Start-->
                <div style="display: block">
                    <p>
                        Прегледайте подробностите за поръчката по-горе и направете
                        поръчката си, когато сте готови.
                    </p>
                    <button type="submit"
                            class="btn btn-primary mt-3"
                            style="width: 100%">
                        Направете поръчка
                    </button>
                </div>
                <!-- Confirm Order End-->
            </div>
        </div>
        <!-- Client's data and Delivery address End -->
        <!-- Order Summary Start -->
        <div class="col-lg-6">
            <div class="container mt-4 px-4 pb-2 rounded"
                 style="background-color: rgb(var(--app-bg-secondary))">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="py-4 m-0">Резюме на поръчката (@Model.ProductsInBag.Sum(p => p.Quantity))</h5>
                    <a href="#"
                       style="color: rgb(var(--app-btn-bg))"
                       target="_blank">
                        Редактиране
                    </a>
                </div>

                <hr class="mt-0" />
                <!-- Product Start -->
                @foreach (var product in Model.ProductsInBag)
                {
                    <div class="row mb-5">
                        <div class="col-5">
                            <div class="product-img">
                                <a asp-controller="Details" asp-action="Index" asp-route-id="@product.Id">
                                    <img src="@product.ImageUrl"
                                         class="img-fluid w-100"
                                         alt="" />
                                </a>
                            </div>
                        </div>
                        <div class="col-7">
                            <div>
                                <p>@product.Name</p>
                                <p>@product.Weight</p>
                                <p>Цена: @product.Price лв.</p>

                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-controller="Checkout" asp-action="DeleteProductFromCart" asp-route-id="@product.Id" class="nav-link">
                                <i class="fas fa-trash-alt me-2"></i>Извади от количка
                            </a>
                            <div class="d-flex justify-content-start align-items-center my-2">
                                <form asp-controller="Checkout" asp-action="AddToCart" asp-route-productId="@product.Id"
                                      method="post">
                                    <input type="hidden" name="quantity" value="-1" />
                                    <button type="submit"
                                            class="btn btn-inverce my-2"
                                            style="background-color: rgb(var(--app-bg-secondary)); border:none">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </form>
                                <span class="mx-2"> @product.Quantity</span>
                                <form asp-controller="Checkout" asp-action="AddToCart" asp-route-productId="@product.Id"
                                      method="post">
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit"
                                            class="btn btn-inverce my-2"
                                            style="background-color: rgb(var(--app-bg-secondary)); border:none">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </form>
                            </div>
                            <p class="mb-0">
                                <span><strong>@(product.Quantity * product.Price) лв.</strong></span>
                            </p>
                        </div>
                    </div>
                }
                <!-- Product End -->
                <!-- Promo Code Start -->
                <div style="display: none">
                    <a href="#"
                       class="nav-link"
                       data-bs-toggle="collapse"
                       data-bs-target="#promo-code">
                        <i class="fa-solid fa-tag me-1"></i>Въведете промо код
                    </a>
                    <div id="promo-code" class="collapse">
                        <input for="promo-code"
                               type="text"
                               class="form-control my-1"
                               name="promo-code"
                               placeholder="напр.SUMMERSALE20" />
                        <a href="#" class="btn w-100 my-2">Приложи</a>
                    </div>
                </div>
                <div style="display: block">
                    <div class="d-flex justify-content-between">
                        <span>Промо код</span>
                        <span>
                            <strong>-10,00 лв.</strong>
                        </span>
                    </div>
                </div>
                <!-- Promo Code Start -->
                <hr />
                <!-- Subtotal Start -->
                <div class="d-flex justify-content-between mb-3">
                    <span>Междинна сума</span>
                    <span class="mb-0">
                        <strong>15,50 лв.</strong>
                    </span>
                </div>
                <!-- Subtotal End -->
                <!-- Delivery Start -->
                <div class="d-flex justify-content-between mb-3">
                    <span>Доставка</span>
                    <span class="mb-0">
                        <strong>6,50 лв.</strong>
                    </span>
                </div>
                <!-- Delivery End -->
                <hr />
                <!-- Total Price Start -->
                <div class="d-flex justify-content-between my-3 fs-4">
                    <span>Общо :</span>
                    <span>15,50 лв.</span>
                </div>
                <!-- Total Price End -->
            </div>
        </div>
        <!-- Order Summary End -->
    </div>
</div>
