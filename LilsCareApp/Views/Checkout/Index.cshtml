@model CheckoutDTO
@{
    ViewData["Title"] = "ПОРЪЧКА";
}
@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" />
}

<div class="container p-3">
    <div class="row g-5 p-3">
        <!-- Client's data and Delivery address Start -->
        <div class="col-lg-6">
            <div class="container p-3 my-4 rounded"
                 style="background-color: rgb(var(--app-bg-secondary))">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="d-flex justify-content-between">
                        <div class="small">
                            Влезли сте като @User.Identity.Name
                        </div>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Checkout", new { area = "" })">
                            <input class="nav-link small text-decoration-underline" type="submit" style="color: rgb(var(--app-btn-bg))" value="Изход">
                        </form>
                    </div>
                }
                else
                {
                    <small>
                        Вече имате акаунт?
                        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Checkout", new { area = "" })" style="color: rgb(var(--app-btn-bg))">
                            Влезте
                        </a>
                        в него за по-бърза поръчка.
                    </small>
                }
            </div>
            <div  class="w-100">
                <!-- Delivery Method Start -->
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Метод за доставка</h5>
                    @if (Model.ShippingProvider != null)
                    {
                        <a asp-controller="Checkout" asp-action="EditShippingProvider" style="color: rgb(var(--app-btn-bg))">
                            Редактиране
                            </a>
                    }

                </div>
                @if (Model.ShippingProvider is null)
                {
                    <div class="d-flex justify-content-between w-100">
                        <div>
                            <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">Няма избран доставчик...</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @foreach (var shippingProvider in Model.ShippingProviders)
                                    {
                                        <a asp-controller="Checkout" asp-action="SelectShippingProvider" asp-route-shippingProviderId="@shippingProvider.Id" class="dropdown-item">
                                            @(shippingProvider.Name) - @(Model.ShippingPrice() == 0 ? "безплатна" : @shippingProvider.Price + " лв.")
                                        </a>
                                    }
                                </li>
                            </ul>
                        </div>
                        @if (Model.ShippingPrice() == 0)
                        {
                            <span>безплатна доставка</span>
                        }
                        else if (Model.ShippingPrice() is null)
                        {
                            <span>няма избран доставчик</span>
                        }
                        else
                        {
                            <span>@Model.ShippingPrice() лв.</span>
                        }
                    </div>


                }
                else
                {
                    <div class="row" style="opacity: 0.9">
                        <div class="d-flex justify-content-between">
                            <span>@Model.ShippingProvider.Name</span>
                            <span>@(Model.ShippingPrice() == 0 ? "безплатна" : @Model.ShippingProvider.Price + " лв.")</span>
                        </div>
                        <span class="small">@Model.ShippingProvider.Description</span>
                    </div>
                }
                <!-- Delivery Method End -->
                <!-- Customer and Delivery Start -->
                @if (Model.ShippingProvider != null)
                {
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <h5>Подробности за клиента</h5>
                        @if (Model.AddressDelivery != null)
                        {
                            <a asp-controller="Checkout" asp-action="EditAddressDelivery" style="color: rgb(var(--app-btn-bg))">
                                Редактиране
                            </a>
                        }

                    </div>
                    <!-- Shipping Provider is Selected Start -->
                    if(Model.ShippingProvider.IsDeliveryToAddress)
                    {
                        <!-- Shipping to Address Start-->
                        if (Model.AddressDelivery != null
                        && Model.AddressDelivery.FirstName != null
                        && Model.AddressDelivery.LastName != null
                        && Model.AddressDelivery.PhoneNumber != null)
                        {
                            <!-- Existing Address to Shipping Start -->
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="py-4 m-0">Подробности за клиента и доставката</h5>
                                <a style="color: rgb(var(--app-btn-bg))">
                                    Редактиране
                                </a>
                            </div>
                            <div class="row" style="opacity: 0.9">
                                <span>@Model.AddressDelivery.FirstName @Model.AddressDelivery.LastName</span>
                                <span>@Model.AddressDelivery.Address, </span>
                                <span>@Model.AddressDelivery.PostCode @Model.AddressDelivery.Town, @Model.AddressDelivery.District, @Model.AddressDelivery.Country</span>
                                <span>@Model.AddressDelivery.PhoneNumber</span>
                            </div>
                            <!-- Existing Address to Shipping End -->
                        }
                        else
                        {
                            <!-- New Address to Shipping Start -->
                            <form asp-controller="Checkout" asp-action="AddressDeliveryToAddress" method="post">
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.FirstName" class="form-label small">Име*</label>
                                    <input asp-for="@Model.AddressDelivery.FirstName"
                                           type="text"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.FirstName" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.LastName" class="form-label small">Фамилия*</label>
                                    <input asp-for="@Model.AddressDelivery.LastName"
                                           type="text"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.LastName" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.PhoneNumber" class="form-label small">Телефонен номер</label>
                                    <input asp-for="@Model.AddressDelivery.PhoneNumber"
                                           type="text"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.Country" class="form-label small">Държава*</label>
                                    <select asp-for="@Model.AddressDelivery.Country" class="form-select">
                                        <option>България</option>
                                    </select>
                                    <span asp-validation-for="@Model.AddressDelivery.Country" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.Address" class="form-label small">Адрес*</label>
                                    <input asp-for="@Model.AddressDelivery.Address"
                                           type="text"
                                           class="form-control"/>
                                    <span asp-validation-for="@Model.AddressDelivery.Address" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.Town" class="form-label small">Град*</label>
                                    <input asp-for="@Model.AddressDelivery.Town"
                                           type="text"
                                           class="form-control"/>
                                    <span asp-validation-for="@Model.AddressDelivery.Town" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.District" class="form-label small">Окръг*</label>
                                    <select asp-for="@Model.AddressDelivery.District" class="form-select">
                                        <option>Благоевград</option>
                                        <option>Бургас</option>
                                        <option>Варна</option>
                                        <option>Велико</option>
                                        <option>Видин</option>
                                        <option>Враца</option>
                                        <option>Габрово</option>
                                        <option>Добрич</option>
                                        <option>Кърджали</option>
                                        <option>Кюстендил</option>
                                        <option>Ловеч</option>
                                        <option>Монтана</option>
                                        <option>Пазарджик</option>
                                        <option>Перник</option>
                                        <option>Плевен</option>
                                        <option>Пловдив</option>
                                        <option>Разград</option>
                                        <option>Русе</option>
                                        <option>Силистра</option>
                                        <option>Сливен</option>
                                        <option>Смолян</option>
                                        <option>София</option>
                                        <option>Софийска област</option>
                                        <option>Стара</option>
                                        <option>Търговище</option>
                                        <option>Хасково</option>
                                        <option>Шумен</option>
                                        <option>Ямбол</option>
                                    </select>
                                    <span asp-validation-for="@Model.AddressDelivery.District" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.PostCode" class="form-label small">Пощенски код*</label>
                                    <input asp-for="@Model.AddressDelivery.PostCode"
                                           type="number"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.PostCode" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.Email" class="form-label small">Имейл за потвърждение на поръчката</label>
                                    <input asp-for="@Model.AddressDelivery.Email"
                                           type="email"
                                           class="form-control"/>
                                    <span asp-validation-for="@Model.AddressDelivery.Email" class="text-danger"></span>
                                </div>
                                <input type="submit"
                                       class="btn mt-3"
                                       style="width: 100%"
                                       value="Потвърдете адреса за доставка">
                            </form>
                            <!-- New Address to Shipping End -->
                        }
                        <!-- Shipping to Address End-->
                    }
                    else
                    {
                        <!-- Shipping to Office Start-->
                        @if (false)//(Model.AddressDelivery != null)
                        {
                            <!-- Existing: FirstName, LastName, PhoneNumber Start-->
                            <div class="row" style="opacity: 0.9">
                                <span>@Model.AddressDelivery.FirstName @Model.AddressDelivery.LastName</span>
                                <span>@Model.AddressDelivery.PhoneNumber</span>
                            </div>
                            <!-- Existing: FirstName, LastName, PhoneNumber End-->
                        }
                        else
                        {
                            <!-- New: FirstName, LastName, PhoneNumber Start-->
                            <form asp-controller="Checkout" asp-action="AddressDeliveryToOffice" method="post">
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.FirstName" class="form-label small">Име*</label>
                                    <input asp-for="@Model.AddressDelivery.FirstName"
                                           type="text"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.FirstName" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.LastName" class="form-label small">Фамилия*</label>
                                    <input asp-for="@Model.AddressDelivery.LastName"
                                           type="text"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.LastName" class="text-danger"></span>
                                </div>
                                <div class="my-2">
                                    <label asp-for="@Model.AddressDelivery.PhoneNumber" class="form-label small">Телефонен номер*</label>
                                    <input asp-for="@Model.AddressDelivery.PhoneNumber"
                                           type="text"
                                           class="form-control" />
                                    <span asp-validation-for="@Model.AddressDelivery.PhoneNumber" class="text-danger"></span>
                                </div>
                                <input type="submit"
                                        class="btn mt-3"
                                        style="width: 100%"
                                       value="Продължете">
                            </form>
                            <!-- New: FirstName, LastName, PhoneNumber End-->
                        }
                        <!-- Shipping to Office End-->
                    }
                    <!-- Shipping Provider is Selected End -->

                }
                <!-- Customer and Delivery End -->
                <hr />

                <!-- Confirm Order Start-->
                <div style="display: block">
                    <p>
                        Прегледайте подробностите за поръчката по-горе и направете
                        поръчката си, когато сте готови.
                    </p>
                    <button type="submit"
                            class="btn btn-primary mt-3"
                            style="width: 100%">
                        Направете поръчка
                    </button>
                </div>
                <!-- Confirm Order End-->
            </div>
        </div>
        <!-- Client's data and Delivery address End -->
        <!-- Order Summary Start -->
        <div class="col-lg-6">
            <div class="container mt-4 px-4 pb-2 rounded"
                 style="background-color: rgb(var(--app-bg-secondary))">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="py-4 m-0">Резюме на поръчката (@Model.ProductsInBag.Sum(p => p.Quantity))</h5>
                    <a href="#"
                       style="color: rgb(var(--app-btn-bg))"
                       target="_blank">
                        Редактиране
                    </a>
                </div>

                <hr class="mt-0" />
                <!-- Product Start -->
                @foreach (var product in Model.ProductsInBag)
                {
                    <div class="row mb-5">
                        <div class="col-5">
                            <div class="product-img">
                                <a asp-controller="Details" asp-action="Index" asp-route-id="@product.Id">
                                    <img src="@product.ImageUrl"
                                         class="img-fluid w-100"
                                         alt="" />
                                </a>
                            </div>
                        </div>
                        <div class="col-7">
                            <div>
                                <p>@product.Name</p>
                                <p>@product.Weight</p>
                                <p>Цена: @product.Price лв.</p>

                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-controller="Checkout" asp-action="DeleteProductFromCart" asp-route-id="@product.Id" class="nav-link">
                                <i class="fas fa-trash-alt me-2"></i>Извади от количка
                            </a>
                            <div class="d-flex justify-content-start align-items-center my-2">
                                <form asp-controller="Checkout" asp-action="AddToCart" asp-route-productId="@product.Id"
                                      method="post">
                                    <input type="hidden" name="quantity" value="-1" />
                                    <button type="submit"
                                            class="btn btn-inverce my-2"
                                            style="background-color: rgb(var(--app-bg-secondary)); border:none">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </form>
                                <span class="mx-2"> @product.Quantity</span>
                                <form asp-controller="Checkout" asp-action="AddToCart" asp-route-productId="@product.Id"
                                      method="post">
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit"
                                            class="btn btn-inverce my-2"
                                            style="background-color: rgb(var(--app-bg-secondary)); border:none">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </form>
                            </div>
                            <p class="mb-0">
                                <span><strong>@(product.Quantity * product.Price) лв.</strong></span>
                            </p>
                        </div>
                    </div>
                }
                <!-- Product End -->
                <!-- Promo Code Start -->
                <div style="display: none">
                    <a href="#"
                       class="nav-link"
                       data-bs-toggle="collapse"
                       data-bs-target="#promo-code">
                        <i class="fa-solid fa-tag me-1"></i>Въведете промо код
                    </a>
                    <div id="promo-code" class="collapse">
                        <input for="promo-code"
                               type="text"
                               class="form-control my-1"
                               name="promo-code"
                               placeholder="напр.SUMMERSALE20" />
                        <a href="#" class="btn w-100 my-2">Приложи</a>
                    </div>
                </div>
                <div style="display: block">
                    <div class="d-flex justify-content-between">
                        <span>Промо код</span>
                        <span>
                            <strong>-10,00 лв.</strong>
                        </span>
                    </div>
                </div>
                <!-- Promo Code Start -->
                <hr />
                <!-- Subtotal Start -->
                <div class="d-flex justify-content-between mb-3">
                    <span>Междинна сума</span>
                    <span class="mb-0">
                        <strong>15,50 лв.</strong>
                    </span>
                </div>
                <!-- Subtotal End -->
                <!-- Delivery Start -->
                <div class="d-flex justify-content-between mb-3">
                    <span>Доставка</span>
                    <span class="mb-0">
                        @if (Model.ShippingPrice() == 0)
                        {
                            <strong>безплатна</strong>
                        }
                        else if (Model.ShippingPrice() is null)
                        {
                            <strong>няма избран доставчик</strong>
                        }
                        else
                        {
                            <strong>@Model.ShippingPrice() лв.</strong>
                        }
                    </span>
                </div>
                <!-- Delivery End -->
                <hr />
                <!-- Total Price Start -->
                <div class="d-flex justify-content-between my-3 fs-4">
                    <span>Общо :</span>
                    <span>15,50 лв.</span>
                </div>
                <!-- Total Price End -->
            </div>
        </div>
        <!-- Order Summary End -->
    </div>
</div>

@section Scripts {
    <!-- Validation form fields on client -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Custom validation for the form -->
    <script src="~/js/customValidations.js"></script>

}
